<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<!-- Веб-браузеры способны выполнять XSL-преобразования на стороне клиента.
	 Для этого мы должны указать ссылку на XSL-файл в следующем теге: -->
<?xml-stylesheet type="text/xsl" href="zooinventory2.xsl"?>
<!-- Мы можем открыть данный файл в браузере и увидеть HTML-страничку,
     содержащую результаты XSL-преобразования (мы можем применять
     разные файлы XSL, указывая соотвествующие URL в атрибуте href,
     например: "zooinventory.xsl" или "zooinventory2.xsl") -->
<inventory>
	<animal animalClass="mammal">
        <name>Song Fang</name>
        <species>Giant Panda</species>
        <habitat>China</habitat>
        <food>Bamboo</food>
        <temperament>Friendly</temperament>
        <weight>33.0</weight>
    </animal>
    
    <animal animalClass="mammal">
        <name>Cocoa</name>
        <species>Gorilla</species>
        <habitat>Central Africa</habitat>
        <foodRecipe>
            <name>Gorilla Chow</name>
            <ingredient>fruit</ingredient>
            <ingredient>shoots</ingredient>
            <ingredient>leaves</ingredient>
        </foodRecipe>
        <temperament>Know-it-all</temperament>
        <weight>45.0</weight>
    </animal>
    
</inventory>
